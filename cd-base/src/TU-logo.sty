\ProvidesPackage{TU-logo}[2011/04/04  v1.00]
\RequirePackage{graphics}
\RequirePackage{ifthen}

\newboolean{rgbprintLogo}
\setboolean{rgbprintLogo}{false}
\newboolean{cmykLogo}
\setboolean{cmykLogo}{false}
\newboolean{monoLogo}
\setboolean{monoLogo}{false}

\DeclareOption{rgb}{}
\DeclareOption{rgbprint}{\setboolean{rgbprintLogo}{true}}
\DeclareOption{cmyk}{\setboolean{cmykLogo}{true}}
\DeclareOption{mono}{\setboolean{monoLogo}{true}}

\newlength{\tulogoWidth}
\setlength{\tulogoWidth}{0.7mm}
%
%
\ExecuteOptions{rgb}%
\ProcessOptions
%
%
\ifthenelse{\boolean{cmykLogo}}{%% CMYK
\newcommand{\tulogo}[1][100]{\includegraphics[width=#1\tulogoWidth]{TUBraunschweig-cmyk}}
\newcommand{\tulogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig-cmyk}}
}{%% RGB-print
\ifthenelse{\boolean{rgbprintLogo}}{%
\newcommand{\tulogo}[1][100]{\includegraphics[width=#1\tulogoWidth]{TUBraunschweig-rgb}}
\newcommand{\tulogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig-rgb}}
}{%% Monochrome
\ifthenelse{\boolean{monoLogo}}{%
\newcommand{\tulogo}[1][100]{\includegraphics[width=#1\tulogoWidth]{
TUBraunschweig-mono}}
\newcommand{\tulogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig-mono}}
}{%% RGB
\newcommand{\tulogo}[1][100]{\includegraphics[width=#1\tulogoWidth]{TUBraunschweig-rgb}}
\newcommand{\tulogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig-rgb}}
}}}

