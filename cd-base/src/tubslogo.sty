\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tubslogo}[2011/05/27  v1.01 CD-Logo der TU Braunschweig]
\RequirePackage{graphicx}
\RequirePackage{ifthen}
%
% color vars
\newboolean{hksLogo}\setboolean{hksLogo}{false}
\newboolean{cmykLogo}\setboolean{cmykLogo}{false}
\newboolean{monoLogo}\setboolean{monoLogo}{false}
% papersize vars
\def\logo@papersize{}
%
%%%%%%%%%%%%%%%%%%%% options %%%%%%%%%%%%%%%%%%%%
% color options
\DeclareOption{rgb}{\relax}
\DeclareOption{hks}{\setboolean{hksLogo}{true}}
\DeclareOption{cmyk}{\setboolean{cmykLogo}{true}}
\DeclareOption{mono}{\setboolean{monoLogo}{true}}
% papersize options
\DeclareOption{a6paper}{\def\logo@papersize{6}}
\DeclareOption{a5paper}{\def\logo@papersize{5}}
\DeclareOption{a4paper}{\def\logo@papersize{4}}
\DeclareOption{a3paper}{\def\logo@papersize{3}}
\DeclareOption{a2paper}{\def\logo@papersize{2}}
\DeclareOption{a1paper}{\def\logo@papersize{1}}
\DeclareOption{a0paper}{\def\logo@papersize{0}}
\DeclareOption*{%
  \PackageWarning{tubslogo}{Unknown option `\CurrentOption'}%
}
%
\ExecuteOptions{rgb}%
\ProcessOptions\relax
%
%
% logo dimensions
\newlength{\tubslogoBaseWidth}
\setlength{\tubslogoBaseWidth}{70mm}
\newlength{\tubslogoBaseHeight}
\setlength{\tubslogoBaseHeight}{26mm}
\newlength{\tubslogoWidth}
\newlength{\tubslogoHeight}
%
\ifthenelse{\equal{\logo@papersize}{6}}{\def\tubslogo@scale{0.6}}{%  60%
\ifthenelse{\equal{\logo@papersize}{5}}{\def\tubslogo@scale{0.7}}{%  70%
\ifthenelse{\equal{\logo@papersize}{4}}{\def\tubslogo@scale{1.0}}{% 100%
\ifthenelse{\equal{\logo@papersize}{3}}{\def\tubslogo@scale{1.4}}{% 140%
\ifthenelse{\equal{\logo@papersize}{2}}{\def\tubslogo@scale{2.0}}{% 200%
\ifthenelse{\equal{\logo@papersize}{1}}{\def\tubslogo@scale{2.8}}{% 280%
\ifthenelse{\equal{\logo@papersize}{0}}{\def\tubslogo@scale{4.0}}{% 400%
\def\tubslogo@scale{1.0}% default
}}}}}}}
\setlength{\tubslogoWidth}{\tubslogo@scale\tubslogoBaseWidth}
\setlength{\tubslogoHeight}{\tubslogo@scale\tubslogoBaseHeight}
%
%
\ifthenelse{\boolean{cmykLogo}}{%% CMYK
\newcommand{\tubslogo}[1][\tubslogo@scale]{%
\includegraphics[width=#1\tubslogoBaseWidth]{TUBraunschweig_4C}}
\newcommand{\tubslogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig_4C}}
}{%% RGB-print
\ifthenelse{\boolean{hksLogo}}{%
\newcommand{\tubslogo}[1][\tubslogo@scale]{%
\includegraphics[width=#1\tubslogoBaseWidth]{TUBraunschweig_SC}}
\newcommand{\tubslogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig_SC}}
}{%% Monochrome
\ifthenelse{\boolean{monoLogo}}{%
\newcommand{\tubslogo}[1][\tubslogo@scale]{%
\includegraphics[width=#1\tubslogoBaseWidth]{TUBraunschweig_B}}
\newcommand{\tubslogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig_B}}
}{%% RGB
\newcommand{\tubslogo}[1][\tubslogo@scale]{%
\includegraphics[width=#1\tubslogoBaseWidth]{TUBraunschweig-rgb}}
\newcommand{\tubslogoAbs}[1]{\includegraphics[width=#1]{TUBraunschweig-rgb}}
}}}
