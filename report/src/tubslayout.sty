    \@test@height@VI\@test@color@VI\@test@id@VI%
    \@test@height@VII\@test@color@VII\@test@id@VII%
    \@test@height@VIII\@test@color@VIII\@test@id@VIII%
  % left white border
  \vNtonetop[all]{1}{\paperheight}{\tubspage@borderwidth}{tuWhite}{lborder}%
}


