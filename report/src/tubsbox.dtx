%    \begin{macrocode}
\providecommand\tb@gb@setorig{%
  \ifthenelse{\boolean{tubsbox@bottomsender}}{%
    \if@tubs@oddpage{%
      \textblockorigin{2\tubspage@borderwidth+\tubspage@bcor}{%
        \tubspage@borderwidth}%
    }{%
      \textblockorigin{2\tubspage@borderwidth}{%
        \tubspage@borderwidth}%
    }%
