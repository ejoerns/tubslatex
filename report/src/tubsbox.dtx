\if@gb@nosep
  \setlength{\tubs@gb@topsep}{0mm}%
  \setlength{\tubs@gb@bottomsep}{0mm}%
  \setlength{\tubs@gb@leftsep}{0mm}%
  \setlength{\tubs@gb@rightsep}{0mm}%
\else\fi
