\ProvidesPackage{beamerfontthemetubs}[2010/05/02 v1.0 Font-Theme CD TU-Braunschweig]
%
\RequirePackage{ifthen}
% font packages
\PassOptionsToPackage{T1}{fontenc}
\RequirePackage{fontenc}
\RequirePackage{eulervm}
\RequirePackage{uarial}
\RequirePackage{type1cm}% prevent OT1 font size warnings

\newboolean{tinytocinheader}\setboolean{tinytocinheader}{false}
%%%%%%%%%%%%%%%%%%%% options %%%%%%%%%%%%%%%%%%%%
\DeclareOptionBeamer{tinytocinheader}{\setboolean{tinytocinheader}{true}}
%
\ProcessOptionsBeamer\relax

% Smaller fonts
\newcommand\micro{%
  \tiny%
  \@tempdima=\f@size pt%
  \@tempdima=0.8333333\@tempdima%
  \@tempdimb=1.2\@tempdima%
  \@setfontsize\micro{\the\@tempdima}{\the\@tempdimb}%
}
\newcommand\nano{%
  \micro%
  \@tempdima=\f@size pt%
  \@tempdima=0.8333333\@tempdima%
  \@tempdimb=1.2\@tempdima%
  \@setfontsize\nano{\the\@tempdima}{\the\@tempdimb}%
}

\setbeamerfont*{page number in sidebar}{size=\small,series=\bfseries}
\setbeamerfont*{title}{series=\bfseries,size=\large}
\setbeamerfont*{subtitle}{series=\mdseries,size=\normalsize}
\setbeamerfont*{author}{series=\mdseries,size=\normalsize}

\setbeamerfont*{frametitle}{series=\bfseries,size=\large}
\setbeamerfont*{footline}{series=\mdseries,size=\micro}


\setbeamerfont*{section in toc}{series=\bfseries,size=\large}
\setbeamerfont*{subsection in toc}{series=\mdseries,size=\normalsize}

\setbeamerfont{footlinelogo}{size=\scriptsize}%

% Set the font for the running toc - if option tinytocinheader is
% chosen, switch the tocinheader on
\ifthenelse{\boolean{tinytocinheader}}{%
  \setbeamerfont*{headertoc}{series=\mdseries,size=\nano}%
%   \setboolean{tocinheader}{true}%
}{%
  \setbeamerfont*{headertoc}{series=\mdseries,size=\micro}%
}
