%% Define the frame title using the color scheme titlelike
\defbeamertemplate*{headline}{sidebar theme}{%
  \usebeamerfont{frametitle}
  \vspace*{-0.4em}
  \ifthenelse{\boolean{notitle}}{%
    % notitle
  }{%
  \ifthenelse{\boolean{highlighttitle}}{%
    \begin{beamercolorbox}[ht=1.5\beamer@headheight]{highlight}%
    \vspace*{1.em}\par%
    %% vphantom makes sure that underlengths are always accounted for
    \hspace*{\beamer@leftmarginwidth}\insertframetitle\vphantom{Fg}%
    \vspace*{0.7em}%
    \end{beamercolorbox}
    %\vspace*{0.1em}
  }{%
    \begin{beamercolorbox}[ht=1.3\beamer@headheight]{titlelike}
    \ifthenelse{\boolean{tocinheader}}{%
    \vbox{%
    \hbox to \hsize{\hfill\usebeamerfont{headertoc}%
    \insertsectionnavigationhorizontal{100mm}{\hskip20pt plus1filll}{\quad}}%
    \ifthenelse{\boolean{nosubsectionsinheader}}{\hbox to \hsize{\hfill%
    \usebeamerfont{headertoc}\ \vphantom{FAp}}}{%
      \hbox to \hsize{\hfill \usebeamerfont{headertoc}\ %
      \vphantom{FAp}\hfill\insertsubsectionnavigationhorizontal{100mm}%
      {\hskip0pt plus1filll}{\quad}}
    }% End of ifthenelse for subsections
%     \vspace{\beamer@tocspace}
    \ifthenelse{\boolean{tinytocinheader@outer}}{\vspace{0.5\beamer@tocspace}}{}
    }
    }%% End of ifthenelse for tocinheader
    %% Correct the spacing for different font sizes
    %%\ifthenelse{\boolean{nosubsectionsinheader}}{\vspace{\beamer@tocspace}}{}
    \par
    \hspace*{\beamer@leftmarginwidth}\insertframetitle\vphantom{Fg}
    \vspace*{.1\beamer@headheight}
    \end{beamercolorbox}
    }%
  }%
}

