\defbeamertemplate*{footline}{sidebar theme}{%
%% Additional space needed to increase the calculated height of the footline
\vspace*{0.25cm}
\begin{minipage}{\paperwidth}
{\usebeamercolor[fg]{structure}
\rule{\textwidth}{0.3pt}}
\vspace{-9pt}

\newdimen\beamer@CDlogowidth
\beamer@CDlogowidth=24.7mm

\tubslogoAbs{\beamer@CDlogowidth}%
\par
% handle option 'nologoinfoot'
\ifthenelse{\boolean{nologoinfoot}}{%
\vspace{10.7pt}
}{%
\vspace{-19pt}%
\logoheight=20.7pt%
\vbox to \logoheight{%
\hfill%
\parbox[b]{0.3\textwidth}{%
\usebeamerfont{footlinelogo}%
\vspace*{3pt}%
\raggedleft\insertlogo}\hspace*{0.5\beamer@CDborderwidth}%
}%
\vspace{9pt}%
}
\end{minipage}
\setlength{\fboxsep}{0mm}% @TESTING
\hspace*{26mm}
\begin{minipage}[t]{\textwidth-26mm-0.2\textwidth}% TODO: width computation
\vspace*{-9mm}
% reset lengths
\setlength{\tubs@outer@datewidth}{0mm}
\setlength{\tubs@outer@titlepagewidth}{0mm}
% calculate footline width
\ifthenelse{\boolean{nodate}}{}{%
  \insertdate\ \rule[-0.1em]{0.1em}{1em}\ %
  \settowidth{\tubs@outer@datewidth}{\insertdate\ \rule[-0.1em]{0.1em}{1em}\ }%
  \addtolength{\tubs@outer@fullfootwidth}{\tubs@outer@datewidth}%
}%
\ifthenelse{\boolean{nopagenum}}{}{%
  \settowidth{\tubs@outer@tempwidth}{%
    ~\rule[-0.1em]{0.1em}{1em}\ \pagename~\insertframenumber}%
  \addtolength{\tubs@outer@fullfootwidth}{\tubs@outer@tempwidth}%
  \addtolength{\tubs@outer@titlepagewidth}{\tubs@outer@tempwidth}%
}%
\settowidth{\tubs@outer@tempwidth}{%
  \insertshortauthor~\rule[-0.1em]{0.1em}{1em}\ }%
\addtolength{\tubs@outer@fullfootwidth}{\tubs@outer@tempwidth}%
\settowidth{\tubs@outer@tempwidth}{\insertshorttitle}%
\addtolength{\tubs@outer@fullfootwidth}{\tubs@outer@tempwidth}%
\addtolength{\tubs@outer@titlepagewidth}{\tubs@outer@tempwidth}%
% test if fooltine width exceeds available space
\ifthenelse{\lengthtest{\tubs@outer@fullfootwidth>\textwidth}}{%
  \insertshortauthor[%
    width=\textwidth-\tubs@outer@datewidth-\tubs@outer@titlepagewidth-1em,
    respectlinebreaks]%
  ~\rule[-0.1em]{0.1em}{1em}\ %
}{%
  \insertshortauthor%
  ~\rule[-0.1em]{0.1em}{1em}\ %
}%
\insertshorttitle%
\ifthenelse{\boolean{nopagenum}}{}{%
  ~\rule[-0.1em]{0.1em}{1em}\ \pagename~\insertframenumber%
}%
\end{minipage}
}

