#! /bin/sh
# postinst script for latex-beamer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)

    if [ -x /usr/bin/mktexlsr ] ; then
      /usr/bin/mktexlsr
    fi
    # Debugging output
    pdftexmap=`kpsewhich pdftex.map`
    echo "Found map file: $pdftexmap";
    # Select if to use local version
    varlibmap=`kpsewhich pdftex.map | grep /var/lib`
    if [ -z "$varlibmap" ]; then
      # Touch 10local.cfg to prevent errors of buggy updmap
      mkdir -p ~/.texmf-config/updmap.d
      touch ~/.texmf-config/updmap.d/10local.cfg

      echo "You seem to use a local font map. Using local variants, too"
      /usr/bin/getnonfreefonts arial-urw
      echo "Adding map file for NexusProSans"
      /usr/bin/updmap --nomkmap --nohash --enable Map=NexusProSans.map
      echo "Adding map file for NexusProSerif"
      /usr/bin/updmap --nomkmap --nohash --enable Map=NexusProSerif.map
      echo "running updmap"
      /usr/bin/updmap
    else
      # Touch 10local.cfg to prevent errors of buggy updmap
      touch /etc/texmf/updmap.d/10local.cfg

      echo "Using sys variants"
      /usr/bin/getnonfreefonts-sys arial-urw
      echo "Adding map file for NexusProSans"
      /usr/bin/updmap-sys --nomkmap --nohash --enable Map=NexusProSans.map
      echo "Adding map file for NexusProSerif"
      /usr/bin/updmap-sys --nomkmap --nohash --enable Map=NexusProSerif.map
      echo "running updmap-sys"
      /usr/bin/updmap-sys
    fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
